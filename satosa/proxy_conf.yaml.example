BASE:       # ex: https://satosa.linea.org.br

COOKIE_STATE_NAME: "SATOSA_STATE"
CONTEXT_STATE_DELETE: True
STATE_ENCRYPTION_KEY:       # ex: "asdASD123"

cookies_samesite_compat:
  - ["SATOSA_STATE", "SATOSA_STATE_LEGACY"]

INTERNAL_ATTRIBUTES: "internal_attributes.yaml"

CUSTOM_PLUGIN_MODULE_PATHS:
  - "plugins/backends/custom"
  - "plugins/microservices/custom"

BACKEND_MODULES:
  - "plugins/backends/github_org.yaml"
  - "plugins/backends/google.yaml"
  - "plugins/backends/cilogon.yaml"
  - "plugins/backends/rubin.yaml"

FRONTEND_MODULES:
  - "plugins/frontends/saml2.yaml"
  - "plugins/frontends/mirror.yaml"

MICRO_SERVICES:
  - "plugins/microservices/comanage_account_linking.yaml"

LOGGING:
  version: 1
  formatters:
    simple:
      format: "[%(asctime)s] [%(levelname)s] [%(name)s.%(funcName)s] %(message)s"
  handlers:
    stdout:
      class: logging.StreamHandler
      stream: "ext://sys.stdout"
      level: DEBUG
      formatter: simple
    syslog:
      class: logging.handlers.SysLogHandler
      address: "/dev/log"
      level: DEBUG
      formatter: simple
    debug_file:
      class: logging.FileHandler
      filename: logs/satosa-debug.log
      encoding: utf8
      level: DEBUG
      formatter: simple
    error_file:
      class: logging.FileHandler
      filename: logs/satosa-error.log
      encoding: utf8
      level: ERROR
      formatter: simple
    info_file:
      class: logging.handlers.RotatingFileHandler
      filename: logs/satosa-info.log
      encoding: utf8
      maxBytes: 10485760 # 10MB
      backupCount: 20
      level: INFO
      formatter: simple
  loggers:
    satosa:
      level: DEBUG
    saml2:
      level: DEBUG
    oidcendpoint:
      level: DEBUG
    pyop:
      level: DEBUG
    oic:
      level: DEBUG
  root:
    level: DEBUG
    handlers:
      - stdout

